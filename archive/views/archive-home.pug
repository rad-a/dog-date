extends layouts/main.pug

block content
	//include includes/nav.pug
	
	div(class="uk-container uk-grid uk-grid-column-medium", id="main")



		div(class="uk-section-secondary uk-width-1-1@s uk-width-1-4@m uk-width-1-5@l uk-flex uk-flex-column infoSections uk-text-center", id="userArea")
			div(class="uk-panel uk-panel-box", id="user")
				div(id="profileImage")= userLetter
				h3(class="uk-text-center")= welcomeMessage
				button(id="logoutBtn", class="uk-button uk-button-danger") Logout
				a(id="addPetsBtn", class="uk-button uk-button-default", href="/pets/add") Add a Pet
				block userPets
			h1(id="currentDate", class="uk-heading") Current Weather
			div(class="uk-text-center", id="currentWeather")
				div(class="uk-text-center")
					img(id="weather-icon", alt="")
				div(id="temp")
				div(id="humidity")
				div(id="wind")
				div(id="uv-index")
			




		div(class="uk-width-1-1@s uk-width-3-4@m uk-width-4-5@l section", id="mainArea")




			div(class="uk-section-secondary infoSections uk-margin", id="pets")
				h1(class="uk-align-center uk-heading-small") Your pets
				hr
				div(class="uk-grid uk-child-width-expand@s uk-text-center", id="petCards")
					each val in pets
						div
							div(class="uk-card uk-card-primary uk-card-body uk-height-1-1")
								h2(class="uk-card-title")= val.petName + ', ' + val.petAge
								p= val.petBreed
								p= val.petGender
								button(class="uk-button uk-button-danger", data-id=val.id, id="petRemoveBtn") Remove
							


						
			div(class="uk-section-secondary uk-margin-bottom infoSections", id="parkMap")
				h1(class="uk-align-center uk-heading-small") Park Map
				hr
				div(class="uk-flex")
					div(class="uk-width-1-1")
						p Select a park from the map or the list below to view more details
					
						form(id="radiusOptions", class="uk-width-1-1@m", uk-margin)
							div(class="uk-inline")
								label(for="radius", id="display")
							div(class="uk-inline")
								select(class="uk-select uk-form-small", id="distance", name="radius", type="text")
									option(value="8050", id="fiveMiles") 5 Miles
									option(value="1600", id="tenMiles") 10 Miles
									option(value="32000", id="twentyMiles") 20 Miles
									option(value="48000", id="thirtyMiles") 30 Miles
							button(class="uk-button uk-button-primary uk-button-small uk-margin-left", id="submit", type="submit") Submit
						
						div(id="map", class="uk-width-1-1@s uk-width-3-4@m")



			
			div(class="uk-section-secondary infoSections uk-margin-bottom", id="parkList")
				h1(class="uk-align-center uk-heading-small") Park List
				hr
				div(class="uk-flex parkInfoArea section")
					div(id="parkList", class="uk-width-1-1@s uk-width-1-3@m")
						h3(class="headerText") List of nearby parks
						div(id="searchResult", class="uk-overflow-auto uk-height-1-1")
					div(id="parkDetails", class="uk-width-1-1@s uk-width-2-3@m")
						h3(class="headerText") Park Details
						div(id="parkInfo", class="uk-overflow-auto uk-height-1-1")




			div(class="uk-section-secondary infoSections", id="forecast")
				h1(class="uk-align-center uk-heading-small") Weather Forecast
				hr
				div(id="forecast_div", class="uk-grid-column-small uk-flex-center weatherEl uk-grid uk-grid-stack", uk-grid)




	div(class="uk-section-secondary")
		a(class="uk-button uk-width-1-1", href="#") Back to Top


