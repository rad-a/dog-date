extends layouts/login_main.pug

block content
	div(class="uk-container")
		div(class="uk-position-center uk-text-center uk-animation-fade uk-border-rounded", uk-margin)
			h1(class="uk-heading-line uk-text-light uk-text-bolder uk-padding")= welcomeMessage
			h3(class="uk-text-bold")= pageMsg

			div(class="form-container uk-align-center uk-text-center uk-padding")
				form(id="petAddForm", method="POST", class="uk-width-1-3@m uk-align-center uk-animation-slide-bottom", uk-margin)
					input(type="text", name="petName", id="petName", class="uk-input uk-form-large", placeholder="Pet's name", required)
					input(type="number", name="petAge", id="petAge", class="uk-input uk-form-large", placeholder="Pet's age", required)
					select(type="text", name="petBreed", id="petBreed", class="uk-select uk-form-large", placeholder="Pet's breed", required)
					select(type="text", name="petGender", id="petGender", class="uk-select uk-form-large", placeholder="Pet's gender", required)
						option(value="Male") Male
						option(value="Female") Female
						option(value="Other") Other
					button(id="loginBtn", class="uk-button uk-button-primary uk-width-1-1") Add Pet

block append localScripts
	script(src="/assets/scripts/landing.js", type="text/javascript")