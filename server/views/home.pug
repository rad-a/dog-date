                                                                        img(class="orbit-image"
                                                                        src="/assets/images/hero-slide-1.jpg"
                                                                        alt="Dog photo. Photo by Angel Luciano on Unsplash")
                                                                        figcaption(class="orbit-caption") 
                                                                                div(class="caption-holder")
                                                                                        h1.sectionHeader= appName
