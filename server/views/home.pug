extends layouts/main

block home       

                div(class="grid-x grid-padding-x largePaddingTop pageMainSection")
                        include includes/user-panel  
                        main(class="cell medium-8") 

                                div(class="orbit"
                                role="region" 
                                aria-label="Dog Date app photos" 
                                data-orbit data-options="animInFromLeft:fade-in; animInFromRight:fade-in; animOutToLeft:fade-out; animOutToRight:fade-out;")
                                        div(class="orbit-wrapper")
                                                div(class="orbit-controls")
                                                        button(class="orbit-previous")
                                                                span(class="show-for-sr") Previous Slide
                                                                | &#9664;&#xFE0E;
                                                        button(class="orbit-next")
                                                                span(class="show-for-sr") Next Slide
                                                                | &#9654;&#xFE0E;
                                        
                                                ul(class="orbit-container")
                                                        - const appName = "Dog Date"
                                                        - const subHeader = "New friends for your fur baby"

                                                        li(class="orbit-slide")
