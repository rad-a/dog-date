extends layouts/login_main.pug

block content
	div(class="uk-container")
		div(class="uk-position-center uk-text-center uk-animation-fade", uk-margin)
			h1(class="uk-heading-line uk-text-light uk-text-bolder uk-padding") Welcome to Dog Date!
			h3(class="uk-text-bold") Please sign up

			img(src="/assets/images/login-corgi-small.png", width="", height="", alt="Your browser doesn't support images and that makes puppy sad.")

			div(class="form-container uk-align-center uk-text-center uk-padding")
				form(id="userRegisterForm", method="POST", class="uk-width-1-3@m uk-align-center uk-animation-slide-bottom", uk-margin)
					input(type="text", name="username", id="username", class="uk-input uk-form-large", placeholder="Username", required)
					input(type="password", name="password", id="password", class="uk-input uk-form-large", placeholder="Password", required)
					input(type="email", name="email", id="email", class="uk-input uk-form-large", placeholder="E-Mail", required)
					input(type="text", name="profileImg", id="profileImg", class="uk-input uk-form-large", placeholder="Profile Image Link")
					button(class="uk-button uk-button-primary uk-width-1-1") Sign Up and Log In
					a(href="/", class="uk-button uk-button-secondary uk-width-1-1") Back to Log In

block append localScripts
	script(src="./assets/scripts/landing.js", type="text/javascript")